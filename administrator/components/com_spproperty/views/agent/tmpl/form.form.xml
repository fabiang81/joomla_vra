<?xml version="1.0" encoding="utf-8"?>
<form validate="true" serverside_validate="true" tabbed="1" addfieldpath="/administrator/components/com_spproperty/fields">

	<fieldset name="basic" class="tab-pane active"  label="COM_SPPROPERTY_FIELDSET_BASIC">
		
		<field name="title" 
			type="text"
			label="COM_SPPROPERTY_FIELD_TITLE"
			required="true"
			size="50" 
		/>

		<field name="slug"
			type="text"
			label="COM_SPPROPERTY_FIELD_ALIAS"
			size="50" 
		/>

		<field name="designation"
			type="text"
			label="COM_SPPROPERTY_FIELD_AGENT_DESINATION"
			size="50" 
		/>

		<field name="phone"
			type="text"
			label="COM_SPPROPERTY_FIELD_AGENT_PHONE"
			size="50" 
		/>

		<field name="mobile"
			type="text"
			label="COM_SPPROPERTY_FIELD_AGENT_MOBILE"
			size="50" 
		/>

		<field name="skype"
			type="text"
			label="COM_SPPROPERTY_FIELD_AGENT_SKYPE"
			size="50" 
		/>

		<field name="email"
			type="email"
			validate="email"
			label="COM_SPPROPERTY_FIELD_AGENT_EMAIL"
			size="50" 
		/>

		<field name="image" 
		 	type="media"
		 	class="image"
		 	label="COM_SPPROPERTY_FIELD_IMAGE"
		 	heigh="50"
		 	width="20%"
		/>

		<field name="description" 
			type="editor"
			class="inputbox"
			label="COM_SPPROPERTY_FIELD_DESC"
			required="true"
			width="300"
			filter="JComponentHelper::filterText"
		/>

		<field name="enabled" type="list" label="JSTATUS" class="chzn-color-state" filter="intval" size="1" default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>

	</fieldset>


	<fieldset name="social" label="COM_SPPROPERTY_FIELDSET_SOCIAL" class="tab-pane">

		<field name="facebook"
			type="text"
			label="COM_SPPROPERTY_FIELD_SOCIAL_FACEBOOK"
			size="50" 
		/>

		<field name="twitter"
			type="text"
			label="COM_SPPROPERTY_FIELD_SOCIAL_TWITTER"
			size="50" 
		/>

		<field name="linkedin"
			type="text"
			label="COM_SPPROPERTY_FIELD_SOCIAL_LINKEDIN"
			size="50" 
		/>

		<field name="gplus"
			type="text"
			label="COM_SPPROPERTY_FIELD_SOCIAL_GPLUS"
			size="50" 
		/>

	</fieldset>
</form>